#!/usr/bin/env bash

# List of Pokémon
POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# API base URL
API_URL="https://pokeapi.co/api/v2/pokemon"

# Output directory
OUTPUT_DIR="pokemon_data"

# Error log
ERROR_FILE="errors.txt"

# Create output directory if it doesn't exist
mkdir -p "$OUTPUT_DIR"

# Loop through Pokémon list
for pokemon in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $pokemon..."

    attempt=1
    success=0

    while [ "$attempt" -le 3 ]; do
        HTTP_STATUS=$(curl -s -w "%{http_code}" -o "$OUTPUT_DIR/$pokemon.json" "$API_URL/$pokemon")

        if [ "$HTTP_STATUS" -eq 200 ]; then
            echo "Saved data to $OUTPUT_DIR/$pokemon.json ✅"
            success=1
            break
        else
            echo "Attempt $attempt failed for $pokemon (HTTP $HTTP_STATUS)"
            attempt=$((attempt + 1))
            sleep 2
        fi
    done

    if [ "$success" -ne 1 ]; then
        echo "Failed to fetch data for $pokemon after 3 attempts" >> "$ERROR_FILE"
        rm -f "$OUTPUT_DIR/$pokemon.json"
    fi

    # Delay to handle rate limiting
    sleep 2
done
