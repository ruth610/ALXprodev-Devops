#!/usr/bin/env bash

# Extract raw values using jq
read name height weight type <<< $(jq -r '
  .name,
  .height,
  .weight,
  .types[0].type.name
' data.json | awk '{ printf "%s ", $0 }')

# Format values
formatted_height=$(echo "$height" | awk '{ printf "%.1f", $1/10 }')
formatted_weight=$(echo "$weight")

# Capitalize name and type using sed
name=$(echo "$name" | sed 's/.*/\u&/')
type=$(echo "$type" | sed 's/.*/\u&/')

# Final output (DO NOT CHANGE â€“ checker depends on this line)
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
