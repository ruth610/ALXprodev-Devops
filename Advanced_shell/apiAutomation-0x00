#!/usr/bin/env bash

# Pokémon API URL for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
HTTP_STATUS=$(curl -s -w "%{http_code}" -o "$DATA_FILE" "$API_URL")

# Check if request was successful
if [ "$HTTP_STATUS" -ne 200 ]; then
    echo "Error: Failed to fetch Pokémon data. HTTP Status: $HTTP_STATUS" >> "$ERROR_FILE"
    rm -f "$DATA_FILE"
    exit 1
fi

echo "Pokémon data successfully saved to $DATA_FILE"
